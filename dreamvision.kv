#:kivy 2.1.0


Screen:

    dream_text : text

    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "MDTopAppbar"
            left_action_items: [["menu", lambda x: nav_draw.set_state()]]
        Widget:
    
    
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                name: "scr1"
                dream_text : text

                MDLabel:
                    text: "DreamVision"
                    font_size: 64
                    halign: "center"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.8}
                    
                    
                MDLabel: 
                    id: random_label
                    text: "-"
                    font_size: 64
                    halign: "center"

                MDTextField:
                    id: text  
                    hint_text: 'Describe your dream'
                    helper_text: 'Forgot your dream?'
                    helper_text_mode: "on_focus" 
                    pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    size_hint_x: None
                    width: 300
                    icon_right: "account-search"
                    required: True


                MDRaisedButton: 
                    text: "Generate a dream"
                    font_size: 32
                    size: 100, 50
                    halign: "center"
                    pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    on_press: app.generate_dream()
        
            MDScreen:
                name: "scr2"
                MDLabel:
                    text: "Dream Gallery"
                    halign: "center"
                        
        MDNavigationDrawer:
            id: nav_draw
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"
            
            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None
                height: avatar.height
    
                Image:
                    id: avatar
                    size_hint: None, None
                    size: "56dp", "56dp"
                    source: "data/logo/kivy-icon-256.png"
    
            MDLabel:
                text: "Lorenzo Maddalena"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]
        
            MDLabel:
                text: "youremail@gmail.com"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
            
            ScrollView:
                MDList:
                    OneLineAvatarListItem:
                        on_press:
                            nav_draw.set_state("close")
                            screen_manager.current = "scr1"
    
                        text: "Dream Vision"
                        IconLeftWidget:
                            icon: "home"
    
                    OneLineAvatarListItem:
                        on_press:
                            nav_draw.set_state("close")
                            screen_manager.current = "scr2"
                        text: "Dream gallery"
                        IconLeftWidget:
                            icon: 'gallery'
   
