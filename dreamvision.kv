#:kivy 2.1.0
<Content>
    orientation: "vertical"
    MDTextField:
        hint_text: 'Title of your dream'
        icon_right: "account-search"
        required: True
    
    MDTextField:
        hint_text: 'Describe your dream'
        icon_right: "account-search"
        required: True

MDScreen:

    # dream_text : text

    BoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            title: "DreamVision"
            left_action_items: [["menu", lambda x: nav_draw.set_state()]]
        Widget:
    
    
    MDNavigationLayout:
        MDScreenManager:
            id: screen_manager
            MDScreen:
                
                name: "scr1"
                # dream_text : text

                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    

                    
                    Image: 
                        source: 'images/dream_icon.jpg'
                        size_hint: 0.3, 0.3

                    MDFloatingActionButtonSpeedDial:
                        data: app.data
                        root_button_anim: True
                        hint_animation: True
                        on_press_stack_button: app.show_dream_popup()

                    # MDTextField:
                    #     id: text  
                    #     hint_text: 'Describe your dream'
                    #     helper_text: 'Forgot your dream?'
                    #     helper_text_mode: "on_focus" 
                    #     pos_hint: {'center_x': 0.5, 'center_y': 0.3}
                    #     size_hint_x: None
                    #     width: 300
                    #     icon_right: "account-search"
                    #     required: True


                    # MDRaisedButton: 
                    #     text: "Generate a dream"
                    #     font_size: 32
                    #     size: 100, 50
                    #     halign: "center"
                    #     pos_hint: {'center_x': 0.5, 'center_y': 0.1}
                    #     on_press: app.generate_dream()
        
            MDScreen:
                name: "scr2"
                MDLabel:
                    text: "Dream Gallery"
                    halign: "center"
                        
        MDNavigationDrawer:
            id: nav_draw
            orientation: "vertical"
            padding: "8dp"
            spacing: "8dp"
            
            AnchorLayout:
                anchor_x: "left"
                size_hint_y: None
                height: avatar.height
    
                Image:
                    id: avatar
                    size_hint: None, None
                    size: "56dp", "56dp"
                    source: "data/logo/kivy-icon-256.png"
    
            MDLabel:
                text: "Lorenzo Maddalena"
                font_style: "Button"
                size_hint_y: None
                height: self.texture_size[1]
        
            MDLabel:
                text: "youremail@gmail.com"
                font_style: "Caption"
                size_hint_y: None
                height: self.texture_size[1]
            
            ScrollView:
                MDList:
                    OneLineAvatarListItem:
                        on_press:
                            nav_draw.set_state("close")
                            screen_manager.current = "scr1"
    
                        text: "Dream Vision"
                        IconLeftWidget:
                            icon: "home"
    
                    OneLineAvatarListItem:
                        on_press:
                            nav_draw.set_state("close")
                            screen_manager.current = "scr2"
                        text: "Dream gallery"
                        IconLeftWidget:
                            icon: 'gallery'
   
