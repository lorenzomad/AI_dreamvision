#:kivy 2.1.0

Screen:

    dream_text : text

    MDLabel:
        text: "DreamVision"
        font_size: 64
        halign: "center"
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        
        
    MDLabel: 
        id: random_label
        text: "-"
        font_size: 64
        halign: "center"

    MDTextField:
        id: text  
        hint_text: 'Describe your dream'
        helper_text: 'Forgot your dream?'
        helper_text_mode: "on_focus" 
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        size_hint_x: None
        width: 300
        icon_right: "account-search"
        required: True


    MDRaisedButton: 
        text: "Generate a dream"
        font_size: 32
        size: 100, 50
        halign: "center"
        pos_hint: {'center_x': 0.5, 'center_y': 0.1}
        on_press: app.generate_dream()
